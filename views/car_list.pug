extends layout 
block content 
    .searchOptionsList 
        div(class='option')
            select(id='makeOption' name='makeOption')
                option(value='' hidden='true' selected='true') Make
                option(value='all') All
                for make in makes 
                    option(value=make.makeName) #{make.makeName}
        div(class='option')
            select(id='yearOption' name='yearOption')
                option(value='' hidden='true' selected='true') Year
                option(value='all') All
                for year in years 
                    option(value=year) #{year}
        div(class='option')
            select(id='bodyOption' name='bodyOption')
                option(value='' hidden='true' selected='true') Body
        div(class='option')
            select(id='energyOption' name='energyOption')
                option(value='' hidden='true' selected='true') Energy  
        div(class='option')
            select(id='priceOption' name='priceOption')
                option(value='' hidden='true' selected='true') Price
                option(value='all') All
                for price in prices 
                    if price !== undefined
                        option(value=price) #{price}
        div(class='option') 
            select(id='locationOption' name='locationOption')
                option(value='' hidden='true' selected='true') Location
                    option(value='all') All
                    for country in countries 
                        option(value=country) #{country}
    .list 
        for car in cars
                .list-card
                    a(href=car.car.url) 
                        .card-thumbnail
                            if undefined===car.pic
                                img(src='https://res.cloudinary.com/dpqwimjsm/image/upload/c_fit,w_800,e_sharpen/iz6xc3p9434pwnxzqqjk' alt=`Unavailable car pic placeholder image` loading='lazy')
                            else 
                                img(src=`${car.pic}` alt=`Vehicle image` loading='lazy')
                            
                        .card-info
                            .card-logo
                                img(src=car.car.make.logoSrc alt=`${car.car.make.name} logo`)
                            .card-text
                                .title 
                                    p #{car.car.version.year} #{car.car.make.name} #{car.car.model.name}
                                .subtitle 
                                    p #{car.car.modelVariant}
                                .footer
                                    p $#{car.car.price.toLocaleString()} â€¢ #{car.car.status}
        

    